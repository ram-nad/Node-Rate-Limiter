{
    "include": ["src/*", "src/**/*"],
    "exclude": ["types", "dist", "node_modules"],
    "compilerOptions": {
      "outDir": "dist",
      "allowJs": false,
      "alwaysStrict": true,
      "declaration": true,
      "declarationDir": "types",
      "declarationMap": true,
      "jsx": "preserve",
      "target": "ES6",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "resolveJsonModule": true,
      "rootDir": "src",
      "strictNullChecks": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "removeComments": true,
      "esModuleInterop": true
    }
  }